<xml>
	<object name="LeapControl" singleinstance="true" settings="false">
		<description>Input from a Leap controller</description>
		<field name="Present" units="" type="enum" options="False,True" default="False" elements="1"/>
		<field name="Roll" units="degrees" type="float" elements="1"/>
		<field name="Pitch" units="degrees" type="float" elements="1"/>
		<field name="Yaw" units="degrees" type="float" elements="1"/>
		<access gcs="readwrite" flight="readwrite"/>
		<telemetrygcs acked="false" updatemode="manual" period="0"/>
		<telemetryflight acked="false" updatemode="periodic" period="1000"/>
		<logging updatemode="manual" period="0"/>
	</object>
</xml>
