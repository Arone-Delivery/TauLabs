<xml>
    <object name="LQRSettings" singleinstance="true" settings="true">
        <description>Gain settings used for the LQR controller</description>

        <!-- parameters for angle controller -->
	<field name="RollAngle" units="" type="float" elementnames="Ka,Kr,Kt" defaultvalue="0.07,0.025,6" />
	<field name="PitchAngle" units="" type="float" elementnames="Ka,Kr,Kt" defaultvalue="0.07,0.025,6" />
	<field name="YawAngle" units="" type="float" elementnames="Ka,Kr,Kt" defaultvalue="0.03,0.01,0.04" />

        <!-- paramaters for rate controller -->
	<field name="RollRate" units="" type="float" elementnames="Kr,Kt,Ki" defaultvalue="0.02,5,0.5" />
	<field name="PitchRate" units="" type="float" elementnames="Kr,Kt,Ki" defaultvalue="0.02,5,0.5" />
	<field name="YawRate" units="" type="float" elementnames="Kr,Kt,Ki" defaultvalue="0.01,0.05,0.25" />

	<!-- parameters for the LQR rate solution -->
	<field name="InputCosts" units="" type="float" elementnames="rollpitch,yaw" defaultvalue="1e4,1e5" />
	<field name="RateParams" units="" type="float" elementnames="rate,torque,integral" defaultvalue="1000,1,1000" />
	<field name="AngleParams" units="" type="float" elementnames="angle,rate,torque" defaultvalue="500,1,1" />
  
	<access gcs="readwrite" flight="readwrite"/>
	<telemetrygcs acked="true" updatemode="onchange" period="0"/>
	<telemetryflight acked="true" updatemode="onchange" period="0"/>
	<logging updatemode="manual" period="0"/>
    </object>
</xml>
