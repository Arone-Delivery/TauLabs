<xml>
    <object name="LQRSettings" singleinstance="true" settings="true">
        <description>Gain settings used for the LQR controller</description>

	<!-- parameters for the LQR rate solution -->
	<field name="RateParams" units="" type="float" elementnames="rate,torque" defaultvalue="0.04,10000" />
	<field name="AngleParams" units="" type="float" elementnames="angle,rate,torque" defaultvalue="4,0.04,10000" />
	<field name="YawRateParams" units="" type="float" elementnames="rate,torque" defaultvalue="0.4,1000" />

	<!-- parameters for the kalman filter -->
	<field name="KFProcessNoise" units="" type="float" elementnames="rate,torque,bias" defaultvalue="1,1e-5,1e-7" />
	<field name="KFGyroNoise" units="" type="float" elements="1" defaultvalue="1000" />
  
	<access gcs="readwrite" flight="readwrite"/>
	<telemetrygcs acked="true" updatemode="onchange" period="0"/>
	<telemetryflight acked="true" updatemode="onchange" period="0"/>
	<logging updatemode="manual" period="0"/>
    </object>
</xml>
